<div class="col-12 mt-4"style="max-height: 100%;">
  <div class="d-flex row mt-90">
    <div>
        {{#each beersFromApi}}
      <img class="col-3" src={{this.image_url}} alt="Card image cap">
    </div>
    <div class="col-9">
        
      <h5 class="">{{this.name}}</h5>
      <h5 class="">{{this.tagline}}</h5>
      <p class="">{{this.description}}</p>
      <h5>Food Pairing:</h5>
      <ul>
      {{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
      </ul>
      {{/each}}
      
    </div>
  </div>
</div>